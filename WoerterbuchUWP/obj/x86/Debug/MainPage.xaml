        <TextBlock x:ConnectionId='12' x:Name="tBlockEn" HorizontalAlignment="Left" Height="22" Margin="736,89,0,0" Text="DE &lt;&gt; EN" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"/>
